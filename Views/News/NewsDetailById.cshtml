@model News

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet"
          href="~/assets/vendors/mdi/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="~/assets/vendors/aos/dist/aos.css/aos.css" />
    <link rel="shortcut icon" href="~/assets/images/favicon.png" />
    <link rel="stylesheet" href="~/assets/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/visionassets/css/style.css" />
    <link rel="stylesheet"
          href="~/visionassets/vendors/aos/dist/aos.css/aos.css" />
    <link rel="stylesheet" href="~/visionassets/vendors/mdi/css/materialdesignicons.min.css" />
}
<br />
<div class="container">
    <div class="row bg-light text-black-50">
        <div class="col-sm-12">
            <div class="news-post-wrapper">
                <div class="news-post-wrapper-sm ">
                    <h1 class="text-center">
                        <b><strong> @Model.NewsTitle</strong> </b>
</h1>
                    <div class="text-center">
                        <a href="#" class="btn btn-dark font-weight-bold mb-4">News category</a>
                    </div>
                        <p class="fs-15 d-flex justify-content-center align-items-center m-0">
                            <b><strong>@Model.NewsPublishTime</strong> </b>
</p>
                </div>
                <img src="~/assets/images/magazine/Magzine_12.jpg"
                     alt="news"
                     class="img-fluid mb-4" style="display: block; margin: auto;" />
                <div class="news-post-wrapper-sm ">
                        <p class="pt-4 pb-4 mb-4">
                            <b>@Model.NewsDescription </b>
                        </p>
                </div>
            </div>
        </div>
    </div>
</div>
