@foreach (var item in Model)
{
    <div style="background-color: white;" class="col-lg-9 stretch-card grid-margin">
        <div style="background-color: white; " class="card">
            <div style="background-color: white;" class="card-body  text-black-50">
                <div class="row">
                    <div class="col-sm-4 grid-margin">
                        <div class="position-relative">
                            <div class="rotate-img">
                                <a href="/News/NewsDetailById/@item.NewsId">
                                    <img src="~/assets/images/haberler/haber1.jpg"
                                         alt="thumb"
                                         class="img-fluid" />
                                </a>
                            </div>
                            <div class="badge-positioned">
                                <span class="badge badge-danger font-weight-bold"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8  grid-margin">
                        <a class="text-black-50" href="/News/NewsDetailById/@item.NewsId">
                            <h2 class="mb-2 font-weight-600">
                                <font color="black"> @item.NewsTitle</font>
                            </h2>
                        </a>
                        <div class="fs-13 mb-2">
                            <span class="mr-2"><font color="black">Category</font> </span>
                        </div>
                        <p class="mb-0">
                            <font color="black"> @item.NewsDescription</font>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<script>
    const images = document.querySelectorAll("img");
    images.forEach(function (image, index) {
        image.src = "/assets/images/haberler/haber"+(index +1)+".jpg";
    });
</script>